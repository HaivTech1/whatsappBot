<script src="/socket.io/socket.io.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.6.0/Chart.min.js"></script>

<script>
    $(document).ready(function() {
        devices();
        function devices(){
            $.ajax({
                type : 'GET',
                async: false,
                url  : '/home/get-devices',
                dataType :'json',
                success:function(response){
                    const {data} = response
                    // console.log(data[0]['devices'])
                 $("#devices").html(data[0]['devices']);
                }
            });
        }
        quota()
        function quota(){
            $.ajax({
                type : 'GET',
                async: false,
                url  : '/home/get-quota',
                dataType :'json',
                success:function(response){
                    const {data} = response
                    // console.log(data[0]['quota'])
                 $("#quota").html(data[0]['quota']);
                }
            });
        }
        outbox();
        function outbox(){
            $.ajax({
                type : 'GET',
                async: false,
                url  : '/home/count-message-outbox',
                dataType :'json',
                success:function(response){
                    const {outbox} = response
                    // console.log(outbox)
                 $("#message-outbox").html(outbox);
                }
            });
        }
        getUseDevices();
        function getUseDevices(){
            $.ajax({
                type : 'GET',
                async: false,
                url  : '/home/get-use-devices',
                dataType :'json',
                success:function(response){
                    const {devices} = response
                    // console.log(devices)
                 $("#use-devices").html(devices);
                }
            });
        }
        
    });
    </script>

