<% layout('layout') -%> 
    
<div class="main-panel">
    <div class="container">
        <div class="panel-header bg-primary-gradient">
            <div class="page-inner py-5">
                <div class="d-flex align-items-left align-items-md-center flex-column flex-md-row">
                    <div>
                        <h2 class="text-white pb-2 fw-bold">Dashboard</h2>
                        <h5 class="text-white op-7 mb-2">Welcome to dashboard <%= username %></h5>
                    </div>
                </div>
            </div>
        </div>
        <div class="page-inner mt--5">
            <div class="row mt--2">
                <div class="col-md-12">
                    <div class="card full-height">
                        <div class="card-body">
                            <div class="main-section">
                                <div class="dashbord">
                                    <div class="icon-section">
                                        <i class="fa fa-whatsapp" aria-hidden="true"></i><br>
                                        <small>Devices</small>
                                        <p><b id="use-devices">0</b> of <b id="devices">0</b></p>
                                    </div>
                                    <div class="detail-section">
                                        <a href="/configuration">More Info</a>
                                    </div>
                                </div>
                                <div class="dashbord dashbord-green">
                                    <div class="icon-section">
                                        <i class="fa fa-send-o" aria-hidden="true"></i><br>
                                        <small>Message Quota</small>
                                        <p><b id="quota">0</b></p>
                                    </div>
                                    <div class="detail-section">
                                        <a href="#">More Info </a>
                                    </div>
                                </div>
                                <div class="dashbord dashbord-orange">
                                    <div class="icon-section">
                                        <i class="fa fa-envelope-o" aria-hidden="true"></i><br>
                                        <small>Outbox</small>
                                        <p><b id="message-outbox">0</b></p>
                                    </div>
                                    <div class="detail-section">
                                        <a href="/message">More Info </a>
                                    </div>
                                </div>
                           
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="card full-height">
                        <div class="card-body">
                            <div class="d-flex flex-wrap justify-content-around pb-2 pt-4">
                                <img src="/images/haivtech.svg" width="300" />
                            </div>
                            <div class="d-flex flex-wrap justify-content-around pb-2 pt-4">
                                <h1>Welcome to WhatsApp Api Haivtech V.2.0.0</h1>
                            </div>
                            <div class="d-flex flex-wrap justify-content-around pb-2 pt-4">
                                <h1><%= username %> <b> ( <%= role %> )</b></h1>
                            </div>
                        </div>
                    </div>
                </div>
              
            </div>
        </div>
    </div>
    <% include partials/min-footer %> 
</div>

